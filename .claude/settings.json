{
  "permissions": {
    "allow": [
      "Bash(cmake *)",
      "Bash(make *)",
      "Bash(cd *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(./build/*)",
      "Bash(jq *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git push *)",
      "Bash(git checkout main)",
      "Read(.env*)",
      "Read(secrets/*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/update-changelog.sh"
          }
        ]
      }
    ]
  }
}
